!!! Strict
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF' }
    %title 
      = "meftos.com#{@page_title ? ": " + @page_title : ""}"
    = stylesheet_link_tag "application"
    %link{ :rel => 'alternate', :type => 'application/atom+xml', :title => 'Atom', :href => url_for(:controller => 'bookmarks', :format => 'atom', :only_path => false) }
    %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => 'RSS 2.0', :href => url_for(:controller => 'bookmarks', :format => 'rss', :only_path => false) } 
  %body#popup
    #container
      #header
        %h1
          %a{ :href => root_path } meftos.com

      #content
        = yield
        
      #footer
        %strong
          %a{ :href => root_path } meftos.com
        %br
        = "Copyright &copy; " + DateTime.now.strftime("%Y")
        = link_to 'Myles Eftos', 'http://myles.eftos.id.au'
    = javascript_include_tag "application"

