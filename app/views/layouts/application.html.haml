!!! Strict
%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF' }
    %title 
      = "meftos.com#{@page_title ? ": " + @page_title : ""}"
    = stylesheet_link_tag "application"
    %link{ :rel => 'alternate', :type => 'application/atom+xml', :title => 'Atom', :href => url_for(:controller => 'bookmarks', :format => 'atom', :only_path => false) }
    %link{ :rel => 'alternate', :type => 'application/rss+xml', :title => 'RSS 2.0', :href => url_for(:controller => 'bookmarks', :format => 'rss', :only_path => false) }
    
  %body
    #container
      #global-navigation
        %ul
          %li
            - form_tag '/search', { :method => :get } do
              %fieldset
                %label
                  %span{ :class => 'text_label' }
                    Search
                  = text_field_tag('q', '', { :id => 'quick_search' })
          %li 
            - if logged_in?
              = link_to 'Logout', logout_path
            - else
              = link_to 'Login', login_path
          %li
            = link_to 'Bookmarklets', bookmarklets_path 
      #header
        %h1
          %a{ :href => root_path } meftos.com

      #navigation
        %ul
          %li
            = link_to 'Bookmarks', bookmarks_path
          %li
            = link_to 'Shorten a URL', new_url_path
          - if logged_in?
            %li
              = link_to 'Save a bookmark', new_bookmark_path
      #content
        = yield
        
      #footer
        %strong
          %a{ :href => root_path } meftos.com
        %br
        = "Copyright &copy; " + DateTime.now.strftime("%Y")
        = link_to 'Myles Eftos', 'http://myles.eftos.id.au'

